                        <tr>
                        <th scope="col">Article</th>
                        <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <th scope="row">{{article}}</th>
                            <td> <a href="/articles/1" class="btn btn-primary">DÃ©tails</a> </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
